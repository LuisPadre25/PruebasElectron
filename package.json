{
    "name": "warcraft-launcher",
    "version": "1.0.0",
    "description": "Launcher para Warcraft usando Go/WASM",
    "main": "main.js",
    "scripts": {
        "start": "concurrently \"go run server/main.go -port 8080\" \"electron .\"",
        "build": "npm run build:wasm ",
        "build:wasm": "set GOOS=js&& set GOARCH=wasm&& go build -o public/wasm/game.wasm game/main.go game/p2p.go"
    },
    "dependencies": {
        "electron": "^28.0.0"
    },
    "devDependencies": {
        "concurrently": "^8.0.0",
        "wait-on": "^7.2.0"
    }
}